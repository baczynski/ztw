.row
  .col-sm-6.col-sm-offset-3
    %h2= t('.sign_up')

    = bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = f.email_field :email, autofocus: true
      = f.password_field :password, autocomplete: "off", help: (t('.chars_min', min: @minimum_password_length) if @minimum_password_length)
      = f.password_field :password_confirmation, autocomplete: "off"
      = f.text_field :first_name
      = f.text_field :surname
      = f.date_field :date_of_birth, autocomplete: 'off'
      = f.fields_for :address_attributes do |a|
        = a.text_field :city
        = a.text_field :zip_code
        = a.text_field :street_address


      = f.submit t('.sign_up'), :class => 'btn btn-success'

    = render "devise/shared/links"