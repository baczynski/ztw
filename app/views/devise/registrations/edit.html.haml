.row
  .col-sm-6.col-sm-offset-3
    %h2= t('edit_player')

    = bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render 'devise/registrations/form', f: f, new_player: false

      = f.submit t('.update'), :class => 'btn btn-success'

      = link_to t('.delete'), registration_path(resource_name), data: { confirm: t('.confirm') }, method: :delete, :class => 'btn btn-danger', id: 'delete_player'
