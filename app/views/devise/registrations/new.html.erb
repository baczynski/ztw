<h2><%=t('sign-up')%></h2>

<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="field">
    <%= f.email_field :email, autofocus: true,label: t('email') %>
  </div>

  <div class="field">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> <%=t('characters-minimum')%> )</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "off" ,label: t('password')%>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "off",label: t('password-confirmation') %>
  </div>

  <div class="actions">
    <%= f.submit t('sign-up') , :class => 'btn btn-success'%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
