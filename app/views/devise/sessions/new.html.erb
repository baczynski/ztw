<h2><%=t('login')%></h2>

<%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    </br>
  <div class="field">

    <%= f.email_field :email, autofocus: true,label: t('email')%>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "off", label: t('password') %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me,label: t('remember-me') %>
    </div>
  <% end -%>

  <div class="actions" >
    <%= f.submit t('sign-in'), :class =>'btn btn-success' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
